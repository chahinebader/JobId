{% block body %}
    <header>

        <div class="cont">
            <div class="logo">
                <a href="#" id="logo-link">

                    <img src="{{ asset('Profile_template/images/LOGO-JOBID.png') }}" alt="logo">

                </a>
            </div>

            <span class="menu-icon"><i class="fa fa-bars" aria-hidden="true"></i></span>
            <div class="nav">

                <span class="close-icon">X</span>

                <ul>
                    <!-- <li><a href="#">Imprimeurs </a></li>-->


                    {% if app.user %}
                        <li><a href="{{ path('admin_list_users') }}">Liste Utilisateurs</a></li>
                        <li><a href="{{ path('inscription_page') }}">Liste Annonces</a></li>
                        <li><a href="{{ path('admin_statistiques') }}">Statistiques   </a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Deconnexion   </a></li>



                    {% endif %}

                </ul>
            </div>
        </div>

    </header>
    <div class="limiter">

        <div class="container-table100">
            <div class="wrap-table100">
                <div class="table">
                    <form style="margin-bottom: 8%" class="pull-right hidden" role="search" id="nav-search-form" method="post" action="{{ path('admin_list_users_bycritere') }}">
                        <div class="input-group">

                            <input type="text" class="form-control" placeholder="email" name ="search">
                            <span class="input-group-btn">

            <button type="submit" class="btn btn-default" style="background-color:#6c7ae0">chercher</button>
          </span>
                        </div>
                    </form>
                    <div class="row header">
                        <div class="cell">
                            Nom Complet
                        </div>
                        <div class="cell">
                            E-mail
                        </div>
                        <div class="cell">
                            Derniere connexion
                        </div>
                        <div class="cell">
                            Etat du compte
                        </div>
                        <div class="cell">
                            Desactiver/Activer
                        </div>
                    </div>
                    {% for user in users_list %}

                    <div class="row">
                        <div class="cell" data-title="Nom Complet">
                            {{ user.nom }} {{ user.prenom }}
                        </div>
                        <div class="cell" data-title="Username">
                            {{ user.email }}
                        </div>
                        <div class="cell" data-title="Derniere connexion">
                            {{ user.lastlogin|date('Y-m-d')  }}
                        </div>
                        <div class="cell" data-title="Etat du compte">
                         {% if user.enabled == true %}
                          <div style="color: forestgreen"> Ouvert </div>
                            {% endif %}
                            {% if user.enabled == false %}
                             <div style="color: red">   Ferm√© </div>
                            {% endif %}
                        </div>
                        <div class="cell" data-title="Activation">
                            <a href="{{ path('changer_status_compte', {'id': user.id}) }}"> Activer/Desactiver</a>
                        </div>
                    </div>
                    {% endfor %}


                </div>
            </div>
        </div>
    </div>







{% endblock %}

