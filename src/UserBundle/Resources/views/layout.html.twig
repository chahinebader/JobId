<!DOCTYPE html>
<html>
<html lang="{{ app.request.getLocale() }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSRF Token -->
    {#<meta name="csrf-token" content="{{ csrf_token() }}">#}

    <title>{% block title %}Welcome!{% endblock %}</title>

    <!-- Styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!--
    <link href="{{ asset('fos/libs/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
-->

    <link rel="stylesheet" href="{{ asset('fos/styles/style.css') }}">
    <link rel="stylesheet" href="{{ asset('fos/styles/progress.css') }}">
    <link rel="stylesheet" href="{{ asset('fos/styles/chat.css') }}">
    <link rel="stylesheet" href="{{ asset('fos/styles/hover.css') }}">
    <link rel="stylesheet" href="{{ asset('fos/styles/bootstrap.min.css') }}">
    <!--
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css">
    -->
    <link rel="stylesheet" href="{{ asset('fos/styles/jquerymobile-1.4.5.min.css') }}">
    <link rel="stylesheet" href="{{ asset('fos/libs/OwlCarousel2-2.2.0/dist/assets/owl.carousel.min.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">
    {% block stylesheets %}{% endblock %}
</head>
<body>


{% block body %}
    <header>

        <div class="cont">
            <div class="logo">
                <a href="#" id="logo-link">
                    <!--
						<img src="{{ asset('fos/images/logo.png') }}" alt="logo">
-->
                </a>
            </div>

            <span class="menu-icon"><i class="fa fa-bars" aria-hidden="true"></i></span>
            <div class="nav">

                <span class="close-icon">X</span>

                <ul>
                    <!-- <li><a href="#">Imprimeurs </a></li>-->
                    {% if app.user == null %}
                        <li><a href="{{ path('fos_user_security_login') }}">Annonces</a></li>
                    {% else %}
                        {% if app.user.freelancer %}
                        <li><a href="{{ path('show_annonces') }}">Toutes les Annonces</a></li>
                        {% else %}
                        <li><a href="{{ path('listeannonce') }}">Toutes les Annonces</a></li>
                        {% endif %}
                    {% endif %}



                    <li>
                        {% if app.user == null %}
                            <a href="{{ path('fos_user_security_login') }}">Graphistes</a>
                            {#% else app.user.client = true %#}
                        {% else %}
                            {% if app.user.client == true %}
                                <a href="{{ path('show_graphistes') }}">Graphistes</a>
                            {% endif %}
                        {% endif %}
                    </li>

                    <li><a href="#">Comment sa marche?</a></li>





                    <li class="nav-border">
                        {% if app.user == null %}
                            <a href="{{ path('fos_user_security_login') }}">Postez un JOB</a>
                            {#% else app.user.client = true %#}
                        {% else %}
                            {% if app.user.client == true %}
                                <a href="{{ path('annonce') }}">Postez un JOB</a>
                            {% endif %}
                        {% endif %}
                    </li>

                    {% if app.user %}

                        <li><a href="{{ path('fos_user_profile_show') }}">Profile</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                    {% else %}
                        <li><a href="{{ path('inscription_page') }}">S’inscrire    </a></li>
                        <li><a href="{{ path('fos_user_security_login') }}">Connexion   </a></li>

                    {% endif %}

                </ul>
            </div>
        </div>

    </header>

    {% block fos_user_content %}
    {% endblock %}
    <footer class="site-footer">

        <div class="footer-content" align="center">
            <div class="newsletters">

                <h2>CONTACTER-NOUS</h2>
                <p>2554 rue Saint Hubert, Québec, Canada.</p>
                <p>contact@jobid.fr</p>
                <div class="footer-social">
                    <a href="#" class="fa fa-facebook-square wow fadeIn" data-wow-offset="150" data-wow-delay="0s"></a>
                    <a href="#" class="fa fa-twitter wow fadeIn" data-wow-offset="150" data-wow-delay=".15s"></a>
                    <a href="#" class="fa fa-google-plus wow fadeIn" data-wow-offset="150" data-wow-delay=".3s"></a>
                    <a href="#" class="fa fa-pinterest wow fadeIn" data-wow-offset="150" data-wow-delay=".45s"></a>
                    <a href="#" class="fa fa-youtube-play wow fadeIn" data-wow-offset="150" data-wow-delay=".6s"></a>
                </div>


            </div>
        </div>
    </footer>


{% endblock %}

<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
<script>
    //~ jQuery(document).bind('mobileinit', function($){
    //~ alert('hich');
    //~ $.mobile.ajaxEnabled = false;
    //~ $.mobile.links = false;
    //~ });
    $(document).bind("mobileinit", function () {
        $.mobile.ajaxEnabled = false;
    });
</script>
